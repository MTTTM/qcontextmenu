{
    "name": "qcontextmenu",
    "version": "0.0.3",
    "description": "qcontextmenu is a simple  contextmenu menu tool for web",
    "main": "dist/index.js",
    "files": [
        "dist"
    ],
    "scripts": {
        "build": "rollup -c .config/rollup.config.js",
        "dev": "rollup -c .config/rollup.config.dev.js -w",
        "test": "NODE_OPTIONS=--experimental-vm-modules jest",
        "test-legacy": "jest tests/legacy",
        "test-es6": "NODE_OPTIONS=--experimental-vm-modules jest tests/unit",
        "format": "prettier --config .config/prettierrc.json --ignore-path .config/prettierignore --write .",
        "format-check": "prettier --config .config/prettierrc.json --ignore-path .config/prettierignore --check ."
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/MTTTM/qcontextmenu"
    },
    "author": {
        "name": "MTTTM"
    },
    "license": "BSD-3-Clause",
    "bugs": {
        "url": "https://github.com/MTTTM/qcontextmenu/issues"
    },
    "homepage": "https://github.com/MTTTM/qcontextmenu",
    "keywords": [
        "qcontextmenu",
        "contextmenu",
        "contextMenu",
        "web contextMenu"
    ],
    "devDependencies": {
        "@babel/core": "^7.18.5",
        "@babel/preset-env": "^7.18.2",
        "jest": "^28.1.0",
        "jest-environment-jsdom": "^28.1.0",
        "prettier": "2.6.2",
        "rollup": "^2.75.7",
        "rollup-plugin-babel": "^4.4.0",
        "rollup-plugin-cleanup": "^3.2.1",
        "rollup-plugin-copy": "^3.4.0",
        "rollup-plugin-livereload": "^2.0.5",
        "rollup-plugin-serve": "^1.1.0",
        "rollup-plugin-terser": "^7.0.2"
    },
    "jest": {
        "verbose": true,
        "testEnvironment": "jsdom"
    }
}